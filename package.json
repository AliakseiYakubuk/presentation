    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.29",
    "sass": "^1.69.5",
    "stylelint": "^16.1.0",
    "stylelint-config-recommended-scss": "^14.0.0",
